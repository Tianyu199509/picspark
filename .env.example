# 数据库配置
DATABASE_URL="postgresql://postgres:password@localhost:5432/picspark"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=picspark
DB_USER=postgres
DB_PASSWORD=password

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 服务器配置
API_PORT=3000
WEB_PORT=5173
NODE_ENV=development

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key
OPENAI_MODEL=gpt-4-turbo-preview
CLAUDE_MODEL=claude-3-sonnet-20240229

# OCR配置
OCR_API_KEY=your-ocr-api-key
OCR_PROVIDER=tencent

# 腾讯云配置（可选）
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_REGION=ap-guangzhou

# 阿里云配置（可选）
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-secret
ALIYUN_REGION=cn-hangzhou

# 七牛云配置（可选）
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-bucket-name
QINIU_DOMAIN=your-cdn-domain

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis配置（可选）
REDIS_URL=redis://localhost:6379

# 监控配置
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# 前端配置
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=PicSpark
VITE_APP_VERSION=1.0.0